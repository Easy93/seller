    <view class="weui-btn-area">
      <button class="weui-btn" type="primary" bindtap="confirmAdd">确定{{pageType === 'add' ? '添加' : '修改'}}</button>
      <button class="weui-btn" type="warn" bindtap="delete" wx:if="{{pageType === 'edit'}}">删除菜品</button>
